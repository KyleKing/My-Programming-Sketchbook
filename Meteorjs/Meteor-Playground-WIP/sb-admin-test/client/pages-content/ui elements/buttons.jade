template(name='buttons')
  //- Page Content
  #page-wrapper
    .row
      .col-lg-12
        h1.page-header Buttons
      //- /.col-lg-12
    //- /.row
    .row
      .col-lg-6
        .panel.panel-default
          .panel-heading
            | Default Buttons
          //- /.panel-heading
          .panel-body
            h4 Normal Buttons
            p
              button.btn.btn-default(type='button') Default
              button.btn.btn-primary(type='button') Primary
              button.btn.btn-success(type='button') Success
              button.btn.btn-info(type='button') Info
              button.btn.btn-warning(type='button') Warning
              button.btn.btn-danger(type='button') Danger
              button.btn.btn-link(type='button') Link
            br
            h4 Disabled Buttons
            p
              button.btn.btn-default.disabled(type='button') Default
              button.btn.btn-primary.disabled(type='button') Primary
              button.btn.btn-success.disabled(type='button') Success
              button.btn.btn-info.disabled(type='button') Info
              button.btn.btn-warning.disabled(type='button') Warning
              button.btn.btn-danger.disabled(type='button') Danger
              button.btn.btn-link.disabled(type='button') Link
            br
            h4 Button Sizes
            p
              button.btn.btn-primary.btn-lg(type='button') Large button
              button.btn.btn-primary(type='button') Default button
              button.btn.btn-primary.btn-sm(type='button') Small button
              button.btn.btn-primary.btn-xs(type='button') Mini button
              br
              br
              button.btn.btn-primary.btn-lg.btn-block(type='button') Block level button
          //- /.panel-body
        //- /.panel
        .panel.panel-default
          .panel-heading
            | Circle Icon Buttons with Font Awesome Icons
          //- /.panel-heading
          .panel-body
            h4 Normal Circle Buttons
            button.btn.btn-default.btn-circle(type='button')
              i.fa.fa-check
            button.btn.btn-primary.btn-circle(type='button')
              i.fa.fa-list
            button.btn.btn-success.btn-circle(type='button')
              i.fa.fa-link
            button.btn.btn-info.btn-circle(type='button')
              i.fa.fa-check
            button.btn.btn-warning.btn-circle(type='button')
              i.fa.fa-times
            button.btn.btn-danger.btn-circle(type='button')
              i.fa.fa-heart
            br
            br
            h4 Large Circle Buttons
            button.btn.btn-default.btn-circle.btn-lg(type='button')
              i.fa.fa-check
            button.btn.btn-primary.btn-circle.btn-lg(type='button')
              i.fa.fa-list
            button.btn.btn-success.btn-circle.btn-lg(type='button')
              i.fa.fa-link
            button.btn.btn-info.btn-circle.btn-lg(type='button')
              i.fa.fa-check
            button.btn.btn-warning.btn-circle.btn-lg(type='button')
              i.fa.fa-times
            button.btn.btn-danger.btn-circle.btn-lg(type='button')
              i.fa.fa-heart
            br
            br
            h4 Extra Large Circle Buttons
            button.btn.btn-default.btn-circle.btn-xl(type='button')
              i.fa.fa-check
            button.btn.btn-primary.btn-circle.btn-xl(type='button')
              i.fa.fa-list
            button.btn.btn-success.btn-circle.btn-xl(type='button')
              i.fa.fa-link
            button.btn.btn-info.btn-circle.btn-xl(type='button')
              i.fa.fa-check
            button.btn.btn-warning.btn-circle.btn-xl(type='button')
              i.fa.fa-times
            button.btn.btn-danger.btn-circle.btn-xl(type='button')
              i.fa.fa-heart
          //- /.panel-body
        //- /.panel
      //- /.col-lg-6
